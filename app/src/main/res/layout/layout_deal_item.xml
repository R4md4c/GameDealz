<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   app:cardElevation="4dp"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:minHeight="@dimen/grid_cell_min_height"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/image"
                android:layout_width="0dp"
                android:adjustViewBounds="true"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_height="wrap_content"
                tools:src="@drawable/ic_placeholder"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/name"
                app:layout_constraintTop_toBottomOf="@+id/image"
                style="@style/BaseTextStyle.Bold"
                android:layout_marginTop="@dimen/baseline_1x"
                app:layout_constraintVertical_bias="0"
                android:layout_marginLeft="@dimen/baseline_1x"
                android:layout_marginRight="@dimen/baseline_1x"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="Metal gear solid"
                app:layout_constraintHeight_default="wrap"
                android:layout_height="0dp"/>

        <TextView
                android:id="@+id/price"
                style="@style/BaseTextStyle"
                app:layout_constraintLeft_toLeftOf="@+id/name"
                tools:text="$44.56"
                app:layout_constraintBottom_toBottomOf="@+id/percentageCut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/timestamp"/>

        <TextView
                android:id="@+id/stores"
                app:layout_constraintRight_toRightOf="@+id/name"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintEnd_toEndOf="@+id/name"
                app:layout_constraintTop_toBottomOf="@+id/name"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="end"
                tools:text="Microsoft"
                android:layout_marginTop="@dimen/baseline_0_5x"
                tools:drawableRight="@drawable/bg_store_color"
                android:drawablePadding="@dimen/baseline_0_5x"
                style="@style/BaseTextStyle.Small"
                app:layout_constraintHorizontal_bias="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/percentageCut"
                app:layout_constraintStart_toEndOf="@+id/timestamp"
                />

        <TextView
                android:id="@+id/timestamp"
                tools:text="2h ago"
                android:textColor="?dividerColor"
                app:layout_constraintLeft_toLeftOf="@+id/name"
                style="@style/BaseTextStyle.Small"
                app:layout_constraintTop_toBottomOf="@+id/name"
                android:layout_marginTop="@dimen/baseline_0_5x"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintBottom_toBottomOf="@+id/stores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/percentageCut"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/price"
                app:layout_constraintRight_toRightOf="@+id/name"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/BaseTextStyle"
                android:layout_marginBottom="@dimen/baseline_1x"
                android:textColor="?colorSecondary"
                android:textStyle="bold"
                tools:text="-20%"
                android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>